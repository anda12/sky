@using Sky.ViewModels
@model Sky.ViewModels.LoginOnViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/Login/css")
    <script type="text/javascript">
        function RefreshValidateCode(obj) {
            obj.src = "/Login/ShowValidateCode/" + Math.floor(Math.random() * 10000);
        }
    </script>
</head>
<body>

        <div class="signin">
            <div class="signin-head"><img src="~/Content/images/login/call.jpg" class="img-circle"></div>
            <form class="form-signin" role="form" method="post">
                @Html.AntiForgeryToken()
                @Html.TextBoxFor(m => m.UsID, new { @type = "text", @class = "form-control", @placeholder = "用户名", @required = true, @autofocus = true })
                @Html.PasswordFor(m => m.UsPassword, new { @class = "form-control", @placeholder = "密码", @required = true })
                <div class="form-group">
                    <div class="col-sm-10" style="padding-left:0px;">
                        <input type="code" name="ValidateCode" class="form-control" placeholder="验证码" aria-describedby="inputGroupSuccess1Status" required />
                    </div>
                    <div class="col-sm-2" style="padding-left:0px;"><img id="imgCode" alt="验证码" title="刷新验证码" onclick="RefreshValidateCode(this);" style="cursor: pointer;width:50px;height:45px;" src="/Login/ShowValidateCode" /></div>
                </div>
                <button class="btn btn-lg btn-warning btn-block" type="submit">登录</button>
                <label class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe, "记住我")
                    @Html.LabelFor(m => m.RememberMe)
                    <span id="errorMsg" style="font-size:14px;color:red">@Html.ValidationMessage("Error_PersonLogin")</span>
                </label>
            </form>
        </div>


</body>
</html>
